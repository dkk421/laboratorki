#include <iosTream>
#include <ctime>
using namespace std;
int main()
{
	setlocale(LC_ALL, "RU");
	srand(time(NULL));

	int n;
	cout << "Введите размер массива ";
	cin >> n;
	int* mass = new int[n];
	for (int i = 0; i < n; i++) {
		mass[i] = rand() % 4; // Заполнение массива
		cout << mass[i] << "  ";
	}

	int counter_mass[4]{0}; // Создание массива, хранящего информацию о количестве повторений числа в массиве. Индекс соотвествует самому числу
	for (int i = 0; i < n; i++) {
		int el = mass[i];
		counter_mass[el] += 1;
	}

	cout << "\n\n\n";

	int max = -10000;
	for (int i = 0; i <= 3; i++) {
		max = (max < counter_mass[i]) ? counter_mass[i] : max; // максимум повторений какого-то числа
	}

	for (int i = 0; i <= 3; i++) {
		if (counter_mass[i] == max)
			printf("Число, которое встречается в одномерном массиве размером %d элементов наибольшее количество раз -- %d\n",n,i);
	}
	
}
